<Window x:Class="FoveatedStreaming.WindowsSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoveatedStreaming.WindowsSample"
        mc:Ignorable="d"
        Title="Windows Sample App" Height="900" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2E"
        FontFamily="Arial">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000"
                                                  BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A4FCF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4C43B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A4FCF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4C43B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D42"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#30000000"
                                      BlurRadius="20"
                                      ShadowDepth="5"
                                      Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF1E1E2E" Offset="0"/>
                <GradientStop Color="#FF161625" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="#FFCCCCCC"/>
            </Style>

            <ControlTemplate x:Key="TextBoxTemplate">
                <Border Background="{TemplateBinding Background}"
                        x:Name="Border"
                        BorderBrush="#0f0f14" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="5"
                        Padding="5">
                    <ScrollViewer Margin="0" x:Name="PART_ContentHost" Foreground="{TemplateBinding Foreground}" />
                </Border>
            </ControlTemplate>

            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="#FFCCCCCC"/>
                <Setter Property="Background" Value="#17171f"/>
                <Setter Property="Template" Value="{StaticResource TextBoxTemplate}"/>
            </Style>
        </Grid.Resources>

        <Border Style="{StaticResource CardStyle}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
                    <TextBlock Text="FoveatedStreaming PC Sample"
                               FontSize="32"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               HorizontalAlignment="Center"
                               Foreground="#FFFFFFFF"
                               TextAlignment="Center"
                               LineHeight="30"/>
                </StackPanel>

                <Image x:Name="QRCodeImage"
                       Source="{Binding QRImageSource}"
                       Grid.Row="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <Border Style="{StaticResource CardStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding DisplayStartPanel, Converter={StaticResource BoolToVis}}"
                    Grid.Row="2">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF383853" Offset="0"/>
                            <GradientStop Color="#32324a" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="App Bundle ID:" Grid.Row="0" Grid.Column="0" Margin="5" HorizontalAlignment="Right" />
                        <TextBox Text="{Binding BundleID, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="0" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" />

                        <Label Content="Port:" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right" />
                        <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1" Grid.Column="1" Width="100" HorizontalAlignment="Left" Margin="5" InputScope="Digits" VerticalContentAlignment="Center" />

                        <Label Content="Force QR Code:" Grid.Row="2" Grid.Column="0" Margin="5" HorizontalAlignment="Right" />
                        <CheckBox IsChecked="{Binding ForceQRCode}" 
                                  Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" />

                        <Label Content="IP to Advertise:" Grid.Row="3" Grid.Column="0" Margin="5" HorizontalAlignment="Right" />
                        <ComboBox ItemsSource="{Binding LocalIPAddresses}" 
                                  SelectedItem="{Binding SelectedIPAddress}" 
                                  Grid.Row="3" 
                                  Grid.Column="1" 
                                  Margin="5" />

                        <Button x:Name="ConnectButton"
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Content="Start"
                             Click="ConnectButton_Click"
                             Style="{StaticResource ModernButtonStyle}"
                             HorizontalAlignment="Center"
                         Margin="0,0,0,0"
                         MinWidth="150"
                         Height="28"
                         FontSize="18"
                         FontWeight="Light"
                         FontFamily="Arial"/>
                    </Grid>
                </Border>
                <StackPanel Grid.Row="3" Visibility="{Binding DisplayDisconnectButton, Converter={StaticResource BoolToVis}}">
                    <Button x:Name="DisconnectButton"
                        Content="Disconnect"
                        Click="DisconnectButton_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Center"
                        MinWidth="150"
                        Height="30"
                        FontSize="18"
                        FontWeight="Light"
                        FontFamily="Arial"/>
                </StackPanel>
                
                <Border Grid.Row="4" Background="#FF383853"
                        CornerRadius="6"
                        Padding="15,10"
                        Margin="0,25,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Style x:Key="StatusStyle" TargetType="Ellipse">
                                <Setter Property="Width" Value="8" />
                                <Setter Property="Height" Value="8" />

                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="VerticalAlignment" Value="Center" />

                                <Setter Property="Grid.Column" Value="0" />

                                <Setter Property="Fill" Value="Gray" />
                                <!-- Default if null -->

                                <Style.Triggers>
                                    <!-- 
                                        Binding="{Binding}" tells the trigger to evaluate the object 
                                        assigned to the Ellipse's DataContext 
                                    -->
                                    <DataTrigger Binding="{Binding}" Value="{x:Static local:ConnectionStatus.Running}">
                                        <Setter Property="Fill" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="{x:Static local:ConnectionStatus.Paused}">
                                        <Setter Property="Fill" Value="Yellow" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="{x:Static local:ConnectionStatus.Stopped}">
                                        <Setter Property="Fill" Value="#FFFF6B6B" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>

                        <Ellipse Style="{StaticResource StatusStyle}" DataContext="{Binding BonjourStatus}" Grid.Row="0" />
                        <Label Content="Bonjour" Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Right" />
                        <Label Content="{Binding BonjourStatusText}" Grid.Row="0" Grid.Column="2" Margin="5" HorizontalAlignment="Left" />

                        <Ellipse Style="{StaticResource StatusStyle}" DataContext="{Binding SessionManagementStatus}" Grid.Row="1" />
                        <Label Content="SMC" Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Right" />
                        <Label Content="{Binding SessionManagementStatusText}" Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Left" />
                        <Button Content="Log" Grid.Row="1" Grid.Column="3" Style="{StaticResource SmallButtonStyle}" Click="SMCLogButton_Click" VerticalAlignment="Center" Margin="5,0" />

                        <Ellipse Style="{StaticResource StatusStyle}" DataContext="{Binding CloudXRStatus}" Grid.Row="2" />
                        <Label Content="CloudXR" Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Right" />
                        <Label Content="{Binding CloudXRStatusText}" Grid.Row="2" Grid.Column="2" Margin="5" HorizontalAlignment="Left" />
                        <Button Content="Log" Grid.Row="2" Grid.Column="3" Style="{StaticResource SmallButtonStyle}" Click="CloudXRLogButton_Click" VerticalAlignment="Center" Margin="5,0" />
                    </Grid>
                    
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>