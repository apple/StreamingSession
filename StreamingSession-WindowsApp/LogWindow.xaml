<Window x:Class="FoveatedStreaming.WindowsSample.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E2E">

    <Window.Resources>
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A4FCF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4C43B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LogTextBox"
                 Grid.Row="0"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="11"
                 Background="#17171f"
                 Foreground="#FFCCCCCC"
                 BorderBrush="#0f0f14"
                 BorderThickness="1"
                 Padding="8"
                 TextWrapping="NoWrap"/>

        <Button x:Name="ClearButton"
                Grid.Row="1"
                Content="Clear"
                Click="ClearButton_Click"
                Style="{StaticResource SmallButtonStyle}"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
